<maui:MauiWinUIApplication
    x:Class="Pomodorek.WinUI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:maui="using:Microsoft.Maui"
    xmlns:local="using:Pomodorek.WinUI">
    <maui:MauiWinUIApplication.Resources>
        <Thickness
            x:Key="TextControlBorderThemeThickness">0</Thickness>
        <Thickness
            x:Key="TextControlBorderThemeThicknessFocused">0</Thickness>

        <DataTemplate
            x:Key="MauiAppTitleBarTemplate">
            <Grid>
                <Border
                    Canvas.ZIndex="1"
                    VerticalAlignment="Stretch"
                    Background="Black"
                    Padding="10,0,0,0">
                    <StackPanel
                        Spacing="5"
                        Orientation="Horizontal">
                        <ImageIcon
                            Source="icon_clock.png"
                            Height="15"
                            Width="15" />
                        <TextBlock
                            Foreground="White"
                            VerticalAlignment="Center"
                            Text="Pomodorek"
                            FontWeight="Normal" />
                    </StackPanel>
                </Border>
            </Grid>
        </DataTemplate>
    </maui:MauiWinUIApplication.Resources>
</maui:MauiWinUIApplication>